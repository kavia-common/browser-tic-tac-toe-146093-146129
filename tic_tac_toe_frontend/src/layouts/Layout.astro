---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Tic Tac Toe â€¢ Ocean Professional</title>
    <meta name="description" content="Play a two-player Tic Tac Toe game in the browser. Modern, minimalist, with Ocean Professional theme." />
  </head>
  <body>
    <div class="app-bg"></div>
    <ThemeToggle />
    <main class="app-container">
      <slot />
    </main>
  </body>
</html>

<style>
  :root {
    /* Ocean Professional - Light */
    --primary: #2563EB;
    --secondary: #F59E0B;
    --success: #F59E0B;
    --error: #EF4444;

    --bg: #f9fafb;          /* background */
    --surface: #ffffff;     /* cards/surfaces */
    --text: #111827;        /* main text */
    --muted: #6B7280;

    --border: rgba(0,0,0,0.08);
    --shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    --shadow-strong: 0 18px 60px rgba(0, 0, 0, 0.12);

    --radius: 16px;
    --radius-sm: 12px;
    --radius-lg: 20px;

    --grid-gap: 14px;
    --transition: 220ms ease;

    /* subtle gradient overlay */
    --gradient-start: rgba(59,130,246,0.08);   /* blue-500/10 */
    --gradient-end: rgba(249,250,251,1);       /* gray-50 */
  }

  body.dark-theme {
    /* Ocean Professional - Dark */
    --primary: #3B82F6;
    --secondary: #F59E0B;
    --success: #F59E0B;
    --error: #F87171;

    --bg: #0F172A;          /* slate-900 */
    --surface: #111827;     /* gray-900 */
    --text: #F9FAFB;
    --muted: #9CA3AF;

    --border: rgba(255,255,255,0.12);
    --shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
    --shadow-strong: 0 18px 60px rgba(0, 0, 0, 0.55);

    --gradient-start: rgba(59,130,246,0.15);
    --gradient-end: rgba(17,24,39,1);
  }

  html, body {
    height: 100%;
  }

  body {
    margin: 0;
    background: var(--bg);
    color: var(--text);
    font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, "Apple Color Emoji", "Segoe UI Emoji";
    line-height: 1.4;
    transition: background-color var(--transition), color var(--transition);
  }

  .app-bg {
    position: fixed;
    inset: 0;
    background:
      radial-gradient(1200px 500px at 10% 0%, var(--gradient-start), transparent 70%),
      radial-gradient(1200px 500px at 90% 100%, var(--gradient-start), transparent 70%),
      linear-gradient(180deg, var(--gradient-end), transparent 30%);
    pointer-events: none;
    z-index: -1;
  }

  .app-container {
    min-height: 100dvh;
    display: grid;
    place-items: center;
    padding: 24px;
  }

  /* Utility */
  .card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
  }

  a { color: inherit; }
</style>
